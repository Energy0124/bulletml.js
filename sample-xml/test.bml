<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">
<bulletml type="vertical" xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">
	<action label="top">
		<repeat>
			<times>10</times>
			<action>
				<actionRef label="shot">
					<param>1</param>
				</actionRef>
				<actionRef label="shot">
					<param>-1</param>
				</actionRef>
			</action>
		</repeat>
	</action>

	<action label="shot">
		<fire>
			<direction type="aim">-15*$1</direction>
			<speed type="absolute">1.0</speed>
			<bullet />
		</fire>
		<wait>0.1</wait>
		<repeat>
			<times>30</times>
			<action>
				<fire>
					<direction type="sequence">$1</direction>
					<speed type="sequence">0.1</speed>
					<bullet />
				</fire>
				<wait>1</wait>
			</action>
		</repeat>
	</action>

</bulletml>
